<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="30dp"
                android:text="Patient Name"
                android:textColor="#000" />

            <TextView
                android:id="@+id/patient_info_name"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginHorizontal="30dp"
                android:textColor="#000"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:text="Patient Gender"
                android:textColor="#000" />

            <TextView
                android:id="@+id/patient_info_gender"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginHorizontal="30dp"
                android:textColor="#000"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:text="Medical Information"
                android:textColor="#000" />

            <TextView
                android:id="@+id/patient_info_medinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:maxHeight="120dp"
                android:minHeight="25dp"
                android:scrollbars="vertical"
                android:textColor="#000"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:text="Doctor History"
                android:textColor="#000" />

            <TextView
                android:id="@+id/patient_info_doctors"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="30dp"
                android:maxHeight="120dp"
                android:minHeight="25dp"
                android:scrollbars="vertical"
                android:textColor="#000"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:text="Appointment History"
                android:textColor="#000" />

            <TextView
                android:id="@+id/patient_info_appointments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:maxHeight="120dp"
                android:minHeight="25dp"
                android:scrollbars="vertical"
                android:textColor="#000"
                android:textSize="17dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".RegisterActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/rect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="8dp"
                android:text="Patient Name"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/patient_info_name"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginHorizontal="30dp"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="9dp"
                android:text="Patient Gender"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/patient_info_gender"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginHorizontal="30dp"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:text="Date of Birth"
                android:textColor="#000" />

            <TextView
                android:id="@+id/patient_info_date_of_birth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="30dp"
                android:maxHeight="120dp"
                android:minHeight="25dp"
                android:scrollbars="vertical"
                android:textColor="#000"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:text="Medical Information"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/patient_info_medinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:maxHeight="120dp"
                android:minHeight="25dp"
                android:scrollbars="vertical"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:text="Previous Doctors"
                android:textColor="#000" />

            <TextView
                android:id="@+id/patient_info_doctors"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="30dp"
                android:maxHeight="120dp"
                android:minHeight="25dp"
                android:scrollbars="vertical"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:text="Appointment History"
                android:textColor="#000"
                android:visibility="gone" />

            <TextView
                android:id="@+id/patient_info_appointments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:maxHeight="120dp"
                android:minHeight="25dp"
                android:scrollbars="vertical"
                android:textColor="#000"
                android:textSize="17dp"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
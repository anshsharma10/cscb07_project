<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/spn_user_spec"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".Fragment.Fragment3">

    <EditText
        android:id="@+id/searchDoctor1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:hint="@string/choose_a_doctor_to_view_appointments"
        android:inputType="textFilter|textPersonName|text"
        android:minHeight="48dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gender"
                android:textAlignment="center"
                android:visibility="visible" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/spn_doctor_gender1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="visible"
                tools:ignore="TouchTargetSizeCheck" />

        </TableRow>

    </TableLayout>

    <ListView
        android:id="@+id/listDoctor1"
        android:layout_width="fill_parent"
        android:visibility="visible"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:layout_marginTop="25dp"
        android:focusable="true"></ListView>

</LinearLayout>